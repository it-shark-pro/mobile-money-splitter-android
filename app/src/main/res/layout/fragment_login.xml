<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="pro.itshark.moneysplitter.presentation.regLogin.login.LoginViewModel" />

        <variable
            name="regLoginViewModel"
            type="pro.itshark.moneysplitter.presentation.regLogin.RegLoginActivityViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_login_error_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/login_error_text"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/text_view_login_email_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_view_login_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_email_text"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_login_email_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/edit_text_login_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.credits.email}"
            app:layout_constraintBottom_toTopOf="@+id/text_view_login_password_input"
            app:layout_constraintTop_toBottomOf="@+id/text_view_login_email_label" />

        <TextView
            android:id="@+id/text_view_login_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_password_text"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_login_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_login_email_input" />

        <EditText
            android:id="@+id/edit_text_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={viewModel.credits.password}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_login_password_input" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> viewModel.login()}"
            android:text="@string/login_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_login_password" />

        <Button
            android:id="@+id/button_login_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> regLoginViewModel.onOpenRegistration()}"
            android:text="@string/registration_reg_button_text"
            app:layout_constraintRight_toLeftOf="@+id/button_login"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_login_password" />
    </android.support.constraint.ConstraintLayout>
</layout>